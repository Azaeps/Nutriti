<div class="container">
  <h1 class="mt-5 font-weight-normal text-center text-success border-bottom pb-3">Faite votre petit déjeuner vous même !</h1>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>


      <%= form_with(model: @users_breakfast, local: true) do |f| %>

        <% if @users_breakfast.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@users_breakfast.errors.count, "error") %> prohibited this @users_breakfast from being saved:</h2>

            <ul>
            <% @users_breakfast.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

          <div class="d-flex justify-content-between mb-2">
            <%= f.label :name, "<h5>Boisson chaude </h5>".html_safe, class:"mb-1" %>
            <%= f.collection_select :id, @hotdrinks, :id, :title, { include_blank: false }, {class: "btn btn-outline-warning w-50 h-25 p-3"}  %>
          </div>

          <div class="d-flex justify-content-between my-2">
            <%= f.label :name, "<h5>Fruit </h5>".html_safe, class:"mb-1" %>
            <%= f.collection_select :id, @fruits, :id, :title, { include_blank: false }, {class: "btn btn-outline-warning w-50 p-3"}  %>
          </div>

          <div class="d-flex justify-content-between my-2">
            <%= f.label :name, "<h5>Céréales </h5>".html_safe, class:"mb-1" %>
            <%= f.collection_select :id, @cereals, :id, :title, { include_blank: false }, {class: "btn btn-outline-warning w-50 p-3"}  %>
          </div>

          <div class="d-flex justify-content-between my-2">
            <%= f.label :name, "<h5>Apport protéïné </h5>".html_safe, class:"mb-1" %>
            <%= f.collection_select :id, @proteins, :id, :title, { include_blank: false }, {class: "btn btn-outline-warning w-50 p-3"}  %>
          </div>

          <div class="d-flex justify-content-between my-2">
            <%= f.label :name, "<h5>Option </h5>".html_safe, class:"mb-1" %>
            <%= f.collection_select :id, @options, :id, :title, { include_blank: false }, {class: "btn btn-outline-warning w-50 p-3"}  %>
          </div>

        <br>
      <div class="actions mt-5">
        <%= f.submit "Générer petit déjeuner", class: "btn btn-lg btn-outline-success btn-block px-3" %>
      </div>
      <% end %>
    </div>
  </div>
</div>



