<h1>Users Days</h1>

<%= link_to "Generate Day", days_path, data:{method: 'post'}, class:'btn btn-info'%>
<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Jour</th>
      <th>Petit Déjeuner</th>
      <th>Déjeuner</th>
      <th>Diner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users_days.each do |users_day| %>
      <tr>
        <td><%= users_day.name %></td>
        <td>
          <ul>
            <li><%= current_user.breakfast.hotdrink.title %> </li>
            <li><%= current_user.breakfast.fruit.title %> </li>
            <li><%= current_user.breakfast.protein.title %> </li>
            <li><%= current_user.breakfast.cereal.title %> </li>
            <li><%= current_user.breakfast.option.title %> </li>
          </ul>
        </td>
        <td>
          <ul>
            <li><%= users_day.lunch.starter.title %></li>
            <li><%= users_day.lunch.dish.title %> </li>
            <li><%= users_day.lunch.dessert.title  %></li>
          </ul>
        </td>
        <td>
          <ul>
            <li><%= users_day.dinner.starter.title %></li>
            <li><%= users_day.dinner.dish.title %> </li>
            <li><%= users_day.dinner.dessert.title  %></li>
          </ul>
        </td>
        <td><%= link_to 'Show', users_day %></td>
        <td><%= link_to 'Destroy', users_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


