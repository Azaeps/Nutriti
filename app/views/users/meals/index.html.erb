<h1>Meals list</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |users_meal| %>
      <tr>
        <td><%= link_to 'Show', users_meal %></td>
        <td><%= link_to 'Edit', edit_users_meal_path(users_meal) %></td>
        <td><%= link_to 'Destroy', users_meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

