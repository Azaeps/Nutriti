<div class="container">

<%= form_with(model: current_user, method: "put") do |f|%>

<div class="form-group">
  <%= f.label :first_name %>
  <%= f.text_field :first_name ,  value: current_user.first_name,required: true, class:"form-control" %>
</div>

<div class="form-group">
  <%= f.label :first_name %>
  <%= f.text_field :last_name ,  value: current_user.last_name,required: true, class:"form-control" %>
</div>

<div class="form-group">
  <%= f.label :birthdate %>
  <%= f.date_field :birthdate ,  value: current_user.birthdate,required: true, class:"form-control" %>
</div>

<div class="form-group">
  <%= f.label :weight, "Poids en kg" %>
  <%= f.number_field :weight, value: current_user.weight ,required: true, class:"form-control"%>
</div>

<div class="form-group">
    <%= f.label :height, "Taille en cm"%>
    <%= f.number_field :height ,value: current_user.height, required: true, class:"form-control"%>
</div>

<div class="form-group">
  <%= f.label :sexe %>
  <%= f.select :gender, [['Homme'],['Femme']] , value: current_user.gender,required: true, class:"form-control"%>
</div>

<div class="form-group">
  <%= f.label :activity %>
  <%= f.select :physical_activity, [['Sedentaire', '1.37'],['Actif', '1.50'],['Tres Actif', '1.80']] ,required: true, class:"form-control"%>
</div>

  <%= submit_tag("Mettre a jour mon profil") %>
<% end %>

