<div class="container">
  
    <h1 class="text-center mt-4 text-success border-bottom pb-3"> Bienvenue sur votre profil <%=current_user.first_name%> <%=current_user.last_name%></h1>
    
    <div class="row1">

      <div class="d-flex justify-content-center mt-5">
        <div class="card w-50">
          <div class="card-body">
            <h5 class="card-title"><%= current_user.first_name %> <%= current_user.last_name %></h5>
            <p class="card-text"><%= current_user.gender %></p>
            <p class="card-text"><%= current_user.birthdate %></p>
            <p class="card-text"><%= current_user.get_age %> ans</p>
            <p class="card-text"><%= current_user.email %></p>
            <p class="card-text"></p>
            <p class="card-text"></p>
          </div>
        </div>
  
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Taille : <%= current_user.height %></li>
          <li class="list-group-item">Poids : <%= current_user.weight %></li>
          <li class="list-group-item">Fréquence de l'activité : <%= current_user.physical_activity %></li>
          <li class="list-group-item">Métabolisme Basal : <%= current_user.mb %> kcal</li>
          <li class="list-group-item">Besoin Calorique quotidien : <%= current_user.drc %> kcal</li>
        </ul>
  
    </div>
    <div class="row2 mt-5">

      <div class="text-center mt-3">
        <%if current_user.id == current_user.id %>
          <%= link_to 'Editer le compte', edit_user_registration_path, class:"btn btn-outline-success" %> |
          <%= link_to 'Editer le profil', edit_user_path, class:"btn btn-success" %>
        <% end %>
      </div>
    
      <div class="text-center mt-3">
          <%= link_to '« Retour Accueil', root_path, class:"btn btn-outline-warning" %>
      </div>
      <br>
    
    </div>
</div>
  