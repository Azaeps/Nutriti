<div class="container">
  <div class="row"><div> <br><br><br></div></div>
  <div class="row"></div>

    <div class="col-md-6 offset-md-3 shadow-lg bg-white rounded py-3">

      <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
      <h1 class="h3 font-weight-normal text-center text-success border-bottom pb-3">Inscription</h1>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mt-3">
          <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email"  %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", autocomplete: "new-password", class: "form-control", placeholder: "Mot de passe #{@minimum_password_length} caractÃ¨res minimum" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmez votre mot de passe" %>
        </div>

        <div class="actions mt-5">
          <%= f.submit "Inscris - toi !", class: "btn btn-lg btn-success btn-block px-3" %>
        </div>
      <% end %>

      <div class = "text-center text-success my-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
